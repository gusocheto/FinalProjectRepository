@using Website.ViewModels.ProductViewModels
@model ProductViewModel

@{
    ViewData["Title"] = "Add Product";
    var today = DateTime.Now.ToString("dd-MM-yyyy");
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.ProductName" class="form-label-add-edit">Product Name</label>
                    <input asp-for="@Model.ProductName" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.ProductName" class="text-danger"></span>
                </div>
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.ProductPrice" class="form-label-add-edit">Price</label>
                    <div class="input-group">
                        <span class="input-group-text">€</span>
                        <input asp-for="ProductPrice" class="form-control" aria-required="true" type="number" step="0.01" min="0" />
                    </div>
                    <span asp-validation-for="@Model.ProductPrice" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.ProductDescription" class="form-label-add-edit">Description</label>
                <textarea asp-for="@Model.ProductDescription" class="form-control" aria-required="true" rows="2"></textarea>
                <span asp-validation-for="@Model.ProductDescription" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.ImageUrl" class="form-label-add-edit">ImageURL</label>
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="false" placeholder="Enter image URL (optional)" />
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.CategoryId" class="form-label-add-edit">Select Category</label>
                    <select asp-for="@Model.CategoryId" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.Categories, "CategoryId", "CategoryType"))">
                        <option value="">Select Category...</option>
                    </select>
                    <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
                </div>
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.ProductTypeId" class="form-label-add-edit">Select Category</label>
                    <select asp-for="@Model.ProductTypeId" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.ProductTypes, "ProductTypeId", "ProductTypeName"))">
                        <option value="">Select Product Type...</option>
                    </select>
                    <span asp-validation-for="@Model.ProductTypeId" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.ProductQuantity" class="form-label-add-edit">Product Quantity</label>
                    <input asp-for="@Model.ProductQuantity" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.ProductQuantity" class="text-danger"></span>
                </div>
            </div>


            <div class="mb-2">
                <input class="btn btn-warning btn-dark-text w-100 py-2 fw-bold rounded" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>