@model DeleteProductViewModel
@using Website.ViewModels.ProductViewModels

@{
    ViewData["Title"] = "Delete Product";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.ProductName</h3>
                <p class="text-danger mt-3">Are you sure you want to delete @(Model.ProductName)?</p>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteProduct" method="post">
                    <input type="hidden" asp-for="ProductId" />
                    <input type="hidden" asp-for="ProductName" />
                    <input type="hidden" asp-for="AdminId" />
                    <input type="hidden" asp-for="AdminName" />
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-warning">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>