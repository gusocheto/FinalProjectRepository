@{
    ViewData["Title"] = "About Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="about-header">
        <h1>About Us</h1>
        <p>Learn more about who we are and what we do.</p>
    </header>

    <!-- About Section -->
    <section class="about-section">
        <div class="container">
            <h2>Our Story</h2>
            <p>
                Welcome to Дрехи ООД, your one-stop shop for the latest fashion trends. Founded in [Year], we are dedicated to providing high-quality clothing and accessories for men, women, and children. Our mission is to bring style, comfort, and affordability to your wardrobe.
            </p>
        </div>
    </section>

    <!-- Mission Section -->
    <section class="mission-section">
        <div class="container">
            <h2>Our Mission</h2>
            <p>
                At Дрехи ООД, our mission is to empower individuals to express themselves through fashion. We strive to offer a wide range of styles that cater to different tastes, ensuring that everyone can find something they love.
            </p>
        </div>
    </section>

    <!-- Team Section -->
    <section class="team-section">
        <div class="container">
            <h2>Meet Our Team</h2>
            <div class="team-grid">
                <div class="team-member">
                    <div class="photo-placeholder"></div>
                    <h3>John Doe</h3>
                    <p>Founder & CEO</p>
                </div>
                <div class="team-member">
                    <div class="photo-placeholder"></div>
                    <h3>Jane Smith</h3>
                    <p>Head of Marketing</p>
                </div>
                <div class="team-member">
                    <div class="photo-placeholder"></div>
                    <h3>David Brown</h3>
                    <p>Lead Designer</p>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
