@model UserOrderDetailsViewModel
@using Website.ViewModels.OrderViewModels

@{
    ViewData["Title"] = "Product Details";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row justify-content-center" style="margin: 0 auto; max-width: 800px;">
    <div class="col-md-8">
        <div class="card-body">
            <h5 class="card-title">@Model.ShippingAddress</h5>
            <hr />
            <h6 class="card-subtitle mb-2 text-muted">Cost of order: @Model.AmountPaid.ToString("C")</h6>
            <hr />
            <p class="card-text">@Model.Country</p>
            <hr />
            <p class="card-text">@Model.City</p>
            <hr />
            <p class="card-text">@Model.ZipCode</p>
            <hr />
        </div>
        <div class="card-footer text-center">
            <div class="d-flex justify-content-between align-items-center">
                <a asp-controller="Order" asp-action="SeeOrders" class="btn btn-warning d-flex justify-content-center align-items-center flex-fill mx-1">Back</a>
            </div>
        </div>
    </div>
    <hr />
    @foreach (var product in Model.productCartViewModels)
    {
        <div class="row align-items-center mb-4 py-3" style="border-bottom: 1px solid #ccc;">
            <div class="col-md-2 text-center">
                @if (!string.IsNullOrEmpty(product.ImageUrl))
                {
                    <img src="@product.ImageUrl" class="img-fluid" style="max-height: 100px; object-fit: contain;" alt="@product.ProductName" />
                }
                else
                {
                    <img src="~/img/no-image-available-02.jpg" class="img-fluid" style="max-height: 100px; object-fit: contain;" alt="No Image Available" />
                }
            </div>
            <div class="col-md-4 text-start">
                <h5 class="mb-0">@product.ProductName</h5>
            </div>
            <div class="col-md-2 text-start">
                <h5 class="mb-0">@product.Price.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("fr-FR"))</h5>
            </div>
        </div>
    }
</div>